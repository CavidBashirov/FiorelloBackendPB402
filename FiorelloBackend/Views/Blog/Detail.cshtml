@model BlogVM

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="project-info-box mt-0">
                <h5>@Model.Title</h5>
                <p class="mb-0">@Model.Description</p>
            </div><!-- / project-info-box -->

            <div class="project-info-box">
                <p><b>Date:</b> @Model.CreateDate.ToString("MM.dd.yyyy")</p>
            </div><!-- / project-info-box -->

        </div><!-- / column -->

        <div class="col-md-7">
            <img src="~/img/@Model.Image" style="width:400px; height:400px" alt="project-image" class="rounded">
           
        </div><!-- / column -->
    </div>
</div>