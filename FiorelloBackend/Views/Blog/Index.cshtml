@model IEnumerable<BlogVM>
@{
    ViewData["Title"] = "Blog Page";
}


<!-- BLOG START -->

<section id="blog">
    <div class="container">
        <div class="row py-5">
            <div class="offset-lg-3 col-lg-6">
                <div class="section-title">
                    <h1>From our Blog</h1>
                    <p class="text-black-50">
                        A perfect blend of creativity, energy, communication, happiness and
                        love. Let us arrange
                        a smile for you.
                    </p>
                </div>
            </div>
        </div>
        <div class="row pb-5 parent-elem">
        <partial name="_BlogPartial" model="@Model" />
        </div>
        <button class="btn btn-primary show-more" data-count="@ViewBag.Count" style="display: block; margin: 0 auto">
            Show more
        </button>
    </div>
</section>

@section js{
    <script src="~/js/blog.js"></script>
}

<!-- BLOG END -->